---
interface Props {
  category: string;
  subcategory: string;
}

const { category, subcategory } = Astro.props;

// This would typically come from a database or CMS
const products = [
  {
    id: 1,
    name: 'ארון הזזה 4 דלתות',
    description: 'ארון הזזה מפואר עם מראות ותאורה LED פנימית',
    image: '/images/products/closet-1.jpg',
    category: 'closets',
    subcategory: 'sliding-closets'
  },
  {
    id: 2,
    name: 'ארון הזזה 3 דלתות',
    description: 'ארון הזזה מודרני עם גימור זכוכית',
    image: '/images/products/closet-2.jpg',
    category: 'closets',
    subcategory: 'sliding-closets'
  },
  // Filter products based on category and subcategory
].filter(product => product.category === category && product.subcategory === subcategory);
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
  {products.map(product => (
    <div class="bg-white rounded-lg shadow-md overflow-hidden">
      <img 
        src={product.image} 
        alt={product.name}
        class="w-full h-64 object-cover"
      />
      <div class="p-6">
        <h3 class="text-xl font-bold mb-2">{product.name}</h3>
        <p class="text-gray-600 mb-4">{product.description}</p>
        <a 
          href={`/product/${product.id}`}
          class="block w-full text-center bg-accent-500 text-white px-4 py-2 rounded hover:bg-accent-600 transition-colors"
        >
          לפרטים נוספים
        </a>
      </div>
    </div>
  ))}
</div>